guard :shell do
  watch('Gemfile') do |m|
    title = 'Bundler'
    msg = `bundle`
    status = ($?.success? && :success) || :failed

    n msg, title, status
    "-> #{msg}"
  end

  watch(/(pom\.xml)|(src\/(main|test)\.+)/) do |m|
    title = 'Lint'
    msg = `mvn compile && mvn checkstyle:checkstyle && mvn pmd:check`
    status = ($?.success? && :success) || :failed

    n msg, title, status
    "-> #{msg}"
  end
end
