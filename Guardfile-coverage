guard :shell do
  watch('Gemfile') do |m|
    title = 'Bundler'
    msg = `bundle`
    status = ($?.success? && :success) || :failed

    n msg, title, status
    "-> #{msg}"
  end

  watch(%r{(pom\.xml)|(src/(main|test)/java/.+\.java)} do |m|
    title = 'Coverage'
    msg = `mvn cobertura:cobertura`
    status = ($?.success? && :success) || :failed

    n msg, title, status
    "-> #{msg}"
  end
end
