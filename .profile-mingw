# Store as /c/Users/$USERNAME/.profile

# Fix current working directory
cd ~

# Disable cygwin path warning
export CYGWIN="$CYGWIN nodosfilewarning"

# Colors
export CLICOLOR=1
alias ls="ls --color"

# This option is not found by GUI programs unless
# manually added to System Properties -> Environment Variables.
# export GREP_OPTIONS="--exclude-from=~/.grepignore --exclude-from=.grepignore"

# Emacs
alias cocoamacs="runemacs"
alias emacs="emacs -nw"

# Node
export PATH=$PATH:"/c/Program Files/nodejs"
export PATH=$PATH:"/c/Documents and Settings/apenneba/Application Data/npm"
