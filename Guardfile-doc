guard :shell do
  watch('Gemfile') do |m|
    title = 'Bundler'
    msg = `bundle`
    status = ($?.success? && :success) || :failed

    n msg, title, status
    "-> #{msg}"
  end

  watch(%r{(pom\.xml)|(src/(main|test)/.+\.(thrift|java))}) do |m|
    title = 'Javadoc'
    msg = `mvn javadoc:javadoc`
    status = ($?.success? && :success) || :failed

    n msg, title, status
    "-> #{msg}"
  end
end
